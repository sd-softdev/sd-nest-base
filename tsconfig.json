{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "index.ts", "package.json"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}